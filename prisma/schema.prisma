generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Files {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  fileName   String
  userId     Int
  storageKey String
  type       String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  deletedAt  DateTime?
  isDeleted  Boolean   @default(false)
}
